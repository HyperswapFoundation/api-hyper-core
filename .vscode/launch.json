{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug API (TS)",
        "runtimeExecutable": "node",
        "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
        "args": ["src/index.ts"],
        "cwd": "${workspaceFolder}",
        "envFile": "${workspaceFolder}/.env",
        "env": {
          "PORT": "3009"
        },
        "skipFiles": ["<node_internals>/**"],
        "console": "integratedTerminal"
      }
    ]
  }
  